.mt-3.bg-white.rounded-lg
  .p-2.mx-2
    .flex.border-b-4.border-gray-400
      .font-semibold.flex
        p 出欠登録
        .ml-3
        = @set_attendance.state_i18n
    = form_with(model: [@circle, @event, @set_attendance], local: true) do |f|
      .flex
        .ml-3
          = f.radio_button :state, :absent
          = f.label :absent, '出席'
        .ml-3
          = f.radio_button :state, :undecided
          = f.label :undecided, '欠席'
        .ml-3
          = f.radio_button :state, :present
          = f.label :state, '未決定'
      .relative.w-full.mb-0.py-2
        = f.text_area :comment, class: "border-0 px-3 py-1 placeholder-bluegray-300 text-bluegray-600 bg-white rounded text-sm shadow focus:outline-none focus:ring w-full ease-linear transition-all duration-10", style: "height: 60px;"
      = f.submit class: "px-4 py-2 rounded-md text-sm font-medium border shadow focus:outline-none focus:ring transition text-white bg-blue-700 active:bg-yellow-200 focus:ring-yellow-300"
